<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<div class="container-fiuld room-posts">
  <h4 class="pb-4">登った山一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>山の画像</th>
        <th>山の名前</th>
      </tr>
    </thead>
    <tbody>
      <% @mountains.each do |mountain| %>
        <tr>
          <td><%= attachment_image_tag mountain, :image,fallback: "no-image.png"  %></td>
          <td class="posts-name"><%= link_to mountain.name, mountain_path(mountain) %></td>
        </tr>
    </tbody>
    <% end %>
  </table>
</div>

