<!DOCTYPE html>
<html>
  <head>
    <title>Gotomountain</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <header>  
      <nav class="navbar is-primary">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <h1 class="title is-3" style="font-family: cursive;">GO TO MOUNTAIN</h1>
          <% end %>
        </div>
        <div class="header-right">
          <% if user_signed_in? %>
            <div class="hidden_box">
              <label for="label1">メニュー</label>
                <input type="checkbox" id="label1"/>
                  <ul class="hidden_show" >
                    <li><%= link_to "登った山登録", new_mountain_path %></li>
                    <li><%= link_to "登録済み山一覧", :mountains%></li>
                    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "lbutton is-warning is-light" %></li>
                  </ul>
            </div>
            <% else %>
            <div class="hidden_box">
              <label for="label1">メニュー</label>
                <input type="checkbox" id="label1"/>
                  <ul class="hidden_show" >
                    <li> <%= link_to "ログイン", new_user_session_path, class: "lbutton is-warning is-light" %></li>
                    <li><%= link_to "新規登録", new_user_registration_path, class: "lbutton is-warning is-light" %></li>
                    <li><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: "post" %></li>
                  </ul>
            </div>
           <% end %> 
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
